{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    },
    "ignore": ["components/ui/**/*.tsx", ".next"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "ignore": [".next"]
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "globals": ["React", "JSX"]
  }
}
